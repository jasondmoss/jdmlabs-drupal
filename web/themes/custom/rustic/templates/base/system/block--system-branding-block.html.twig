{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
  'navigation',
  'site--branding'
] %}
<nav itemprop="publisher" itemscope itemtype="https://schema.org/Organization"{{ attributes.addClass(classes)|without('aria-labelledby') }}>
  <a itemprop="url" rel="index" href="{{ path('<front>') }}" title="{{ 'Home'|t }}">
    {% if site_logo is not empty %}
      {% include site_logo %}
    {% endif %}
    {% if (site_name and  site_slogan) is not empty %}
      {% if site_name %}
        <span itemprop="name" class="site-name">{{ site_name }}<span>:</span></span>
      {% endif %}
      {% if site_slogan %}
        <span itemprop="slogan" class="site-slogan">{{ site_slogan }}</span>
      {% endif %}
    {% endif %}
  </a>
</nav>
